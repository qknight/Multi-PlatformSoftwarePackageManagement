% \logo{filename}{title}
\newcommand{\logo}[2]{
	\noindent\begin{minipage}[t][1cm][t]{1cm}
		\includegraphics[scale=.07]{images/logos/png/#1.png}
	\end{minipage}
	\noindent\parbox[b][0.5cm][c]{\textwidth}{#2}
}

% \rulebox{color}{text}
\newcommand{\rulebox}[2]{
	\vspace*{1ex}
	\noindent {\color{#1} \vrule width .75ex {
		\hspace*{1ex}
		\parbox{\textwidth}{\color{black}
			\vspace*{1ex}
			#2
			\vspace*{1ex}
		}
	}}
	\vspace*{1ex}
}

